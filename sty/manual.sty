\RequirePackage{tcolorbox}
\RequirePackage{xparse}
\NewDocumentCommand{\ilcode}{v}{%
    \tcbox[
        % breakable,
        on line,
        boxsep=0pt,
        left=3pt,
        right=3pt,
        top=1.5pt,
        bottom=1pt,
        colback=gray!8,
        colframe=gray!25,
        arc=4pt,
        boxrule=0.8pt,
        fontupper=\ttfamily\normalsize,
        before upper={\color{black!80}}
    ]{\detokenize{#1}}%
}

