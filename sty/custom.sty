%% If you don't know what this is, please don't modify it
\NeedsTeXFormat{LaTeX2e}[1995/12/01]
\ProvidesPackage{sty/custom}[2015/01/05 v0.1 commons macros package]
\DeclareOption*{
\PackageWarning{custom}{Unknown option '\CurrentOption'}
}
\ProcessOptions\relax
%%***************************** Header End *********************************

%%***************************** Manual Start *********************************
%% input `manual.sty`
%% This part is for manual, such as the display function of inline code.
%% Therefore, you can comment out this part
\RequirePackage{sty/manual}
%%***************************** Manual End *********************************

%%************ User Start ********************
%% >>> Font
\RequirePackage{fontspec}
\defaultfontfeatures{Ligatures=TeX}
\setmainfont{Times New Roman}                   % English font
% \setCJKmainfont{SimSun}[BoldFont=SimHei]      % 正文字体
% \setCJKsansfont{Microsoft YaHei}              % 无衬线字体
% \setCJKmonofont{NSimSun} 

%% >>> Floats (figure, table, listing, algorithm)
\RequirePackage[section]{placeins}    % to prevent floats from being moved over section

%% >>> Graphic (figure)
\RequirePackage{graphicx}
\RequirePackage{subcaption}           % modern replacement for subfigure
\RequirePackage{overpic}              % overlay LaTeX elements on images
\DeclareGraphicsExtensions{.pdf,.png,.jpg}

%% >>> Caption
%% Note: Including the caption of figures, codes, table
\RequirePackage{caption}
\captionsetup[figure]{
    skip = 1pt,          
    % belowskip = 5pt,     
    % aboveskip = 5pt      
}
\captionsetup[table]{
    skip = 1pt,
    % belowskip = 5pt,
    % aboveskip = 5pt
}

%% >>> Math, Algorithm and other science packages
\RequirePackage{mathrsfs}
\RequirePackage{siunitx}
\RequirePackage{chemformula}
\RequirePackage{physics}
\RequirePackage{amsmath,amssymb,amstext}
\RequirePackage{algorithm}
\RequirePackage{algpseudocode}


%% >>> Math >>> equations
\setlength\abovedisplayskip{0pt}% set display skip between equations and main words
\setlength\belowdisplayskip{0pt}

%% >>> Table
\RequirePackage{multirow}

%% >>> Hyperlink
\hypersetup{
    pdffitwindow=false,
    pdfstartview={FitH},
    colorlinks=true,
    linkcolor=blue,
    citecolor=black,
    filecolor=blue,
    urlcolor=blue
}

%% >>> Code Space
\RequirePackage{listings}
\RequirePackage{xcolor}
%% Shell
\lstdefinestyle{myshell}{
    language=[LaTeX]TeX,
    basicstyle=\ttfamily\small,
    numbers=left,
    frame=single,
    backgroundcolor=\color{gray!3},
    breaklines=true,
    captionpos=b,
    showstringspaces=false,
    keywordstyle=\color{blue},
    commentstyle=\color{green!50!black},
    stringstyle=\color{red},
    morecomment=[l][\color{green!50!black}]{\%},
    linewidth=\textwidth,
    xleftmargin=0.05\textwidth,
    xrightmargin=0.05\textwidth
}
%% Latex
\lstdefinestyle{mylatex}{
    language=[LaTeX]TeX,
    basicstyle=\ttfamily\small,
    numbers=left,
    numberstyle=\tiny\color{gray},
    frame=single,
    breaklines=true,
    captionpos=b,
    showstringspaces=false,
    keywordstyle=\color{blue}\bfseries,
    commentstyle=\color{green!60!black},
    stringstyle=\color{orange},
    morecomment=[l][\color{green!60!black}]{\%},
    morekeywords={documentclass, usepackage, begin, end, chapter, section, subsection, caption, label, ref, cite, includegraphics, title, author, date},
    morekeywords=[2]{article, book, report, beamer, graphicx, amsmath, hyperref, geometry, fancyhdr},
    keywordstyle=[2]\color{purple},
    linewidth=\textwidth,
    xleftmargin=0.05\textwidth,
    xrightmargin=0.05\textwidth
}
%% Python
\lstdefinestyle{mypython}{
    language=Python,
    basicstyle=\ttfamily\small,
    keywordstyle=\color{blue},
    commentstyle=\color{green},
    stringstyle=\color{red},
    numbers=left,
    numberstyle=\tiny\color{gray},
    frame=single,
    breaklines=true,
    captionpos=b,
    linewidth=\textwidth,
    xleftmargin=0.05\textwidth,
    xrightmargin=0.05\textwidth
}


